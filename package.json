{
    "name": "ngx-elements",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "playground": "ng serve",
        "package": "ng-packagr -p ./library/ng-package.json",
        "styles": "ncp ./styles ./dist/styles",
        "bundle": "npm run package && npm run styles",
        "version:patch": "cd library && npm version patch && cd ..",
        "version:minor": "cd library && npm version minor && cd ..",
        "version:major": "cd library && npm version major && cd ..",
        "build:patch": "npm run version:patch && npm run bundle",
        "build:minor": "npm run version:minor && npm run bundle",
        "build:major": "npm run version:major && npm run bundle"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^5.2.0",
        "@angular/common": "^5.2.0",
        "@angular/compiler": "^5.2.0",
        "@angular/core": "^5.2.0",
        "@angular/forms": "^5.2.0",
        "@angular/http": "^5.2.0",
        "@angular/platform-browser": "^5.2.0",
        "@angular/platform-browser-dynamic": "^5.2.0",
        "@angular/router": "^5.2.0",
        "core-js": "^2.4.1",
        "rxjs": "^5.5.6",
        "zone.js": "^0.8.19"
    },
    "devDependencies": {
        "@angular/cli": "~1.7.0",
        "@angular/compiler-cli": "^5.2.0",
        "@angular/language-service": "^5.2.0",
        "copy-dir-cli": "^0.0.3",
        "ncp": "^2.0.0",
        "ng-packagr": "^2.1.0",
        "tsickle": "~0.25.6",
        "tslib": "^1.9.0",
        "typescript": "~2.5.3"
    }
}
